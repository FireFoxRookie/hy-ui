.fd-poptip-default-txt {
  padding: 10px;
  font: 14px/20px 'Microsoft YaHei';
}

.fd-poptip-popper[x-placement=top] .fd-poptip-popper-arrow, .fd-poptip-popper[x-placement=top-start] .fd-poptip-popper-arrow {
  border-top-color: #fff;
  left: 10px;
  // bottom: -5px;
}

.fd-poptip-popper[x-placement=bottom] .fd-poptip-popper-arrow, .fd-poptip-popper[x-placement=bottom-start] .fd-poptip-popper-arrow {
  border-bottom-color: #fff;
  left: 10px;
  top: -10px;
}

.fd-poptip-popper[x-placement=left] .fd-poptip-popper-arrow, .fd-poptip-popper[x-placement=left-start] .fd-poptip-popper-arrow {
  border-left-color: #fff;
  top: 10px
  right: -10px;
}

.fd-poptip-popper[x-placement=right] .fd-poptip-popper-arrow, .fd-poptip-popper[x-placement=right-start] .fd-poptip-popper-arrow {
  border-right-color: #fff;
  top: 10px;
  left: -10px;
}

.fd-poptip-inner {
  padding: 20px;
  box-shadow: 0 1px 6px rgba(0,0,0,.2);
  background-color: #fff;
  border-radius: 4px;
}
.fd-poptip-popper-arrow {
  border: 5px solid transparent;
  width: 0;
  height: 0;
}